<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card card-default">
            <div class="card-header">
                <h1>Payment Methods</h1>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Payment Method</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @paymentmethods.each do |paymentmethod| %>
                    <tr>
                        <td><%= link_to paymentmethod.paymenttype, paymentmethod %></td>
                        <!--<td><%= link_to 'Show', paymentmethod %></td>-->
                        <td><%= link_to 'Edit', edit_paymentmethod_path(paymentmethod) %>
                        <% if current_user.admin? %> / 
                            <%= link_to 'Destroy', paymentmethod, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="card-footer">
                <%= link_to 'New Payment Method', new_paymentmethod_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>

<br>