<h1>Payment Methods</h1>

<table>
  <thead>
    <tr>
      <th>Payment Method</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paymentmethods.each do |paymentmethod| %>
      <tr>
        <td><%= paymentmethod.paymenttype %></td>
        <td><%= link_to 'Show', paymentmethod %></td>
        <td><%= link_to 'Edit', edit_paymentmethod_path(paymentmethod) %></td>
        <td><%= link_to 'Destroy', paymentmethod, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment Method', new_paymentmethod_path %>
