<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Customer Status</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Customer Status:</strong>
                    <%= @customerstatus.customerstatus %>
                </p>

                <% unless @customerstatus.customers.empty? %>
                <p>
                    <strong>Customers:</strong>
                    <ul style="columns: 3 200px;">
                        <% @customerstatus.customers.each do |customer| %>
                        <li><%= link_to customer.try(:cus_fullname), customer %>
                            <% end %>
                        </li>
                    </ul>
                </p>
                <% end %>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_customerstatus_path(@customerstatus), class: "btn btn-primary" %>
                <%= link_to 'Back', controller: "customerstatuses" %>
            </div>
        </div>
    </div>
</div>