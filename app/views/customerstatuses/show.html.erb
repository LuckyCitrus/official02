<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Customer Status</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Customer Status:</strong>
                    <%= @customerstatus.customerstatus %>
                </p>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_customerstatus_path(@customerstatus), class: "btn btn-primary" %>
                <%= link_to 'Back', customerstatuses_path, class: "btn btn-secondary" %> </div>
        </div>
    </div>
</div>