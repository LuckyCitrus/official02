<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Order Auction</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Order #:</strong>
                    <%= link_to @order_auction.order.ordernum, @order_auction.order%>
                </p>
                <p>
                    <strong>Auction Name:</strong>
                    <%= link_to @order_auction.auction.auctionname, @order_auction.auction %>
                </p>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_order_auction_path(@order_auction), class: "btn btn-primary" %>
                <%= link_to 'Show Order Auctions', order_auctions_path, class: "btn btn-secondary" %> </div>
        </div>
    </div>
</div>