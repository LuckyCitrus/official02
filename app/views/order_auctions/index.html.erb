<p id="notice"><%= notice %></p>

<h1>Order Auctions</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Auction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_auctions.each do |order_auction| %>
      <tr>
        <td><%= order_auction.order_id %></td>
        <td><%= order_auction.auction.auctionname %></td>
        <td><%= link_to 'Show', order_auction %></td>
        <td><%= link_to 'Edit', edit_order_auction_path(order_auction) %></td>
        <td><%= link_to 'Destroy', order_auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

