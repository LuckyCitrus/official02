<% if user_signed_in? %>
<div class="charts">
    <%= line_chart charts_invoices_by_month_path,
	xtitle: "Month",
	ytitle: "Invoices ($)",
	title: "Invoices per Month"
	%>
</div>

<div class="charts">
    <%= column_chart charts_orders_by_month_path,
	xtitle: "Month",
	ytitle: "Orders",
	title: "Orders per Month"
	%>
</div>


<% else %>
<div class="background-image"></div>
<% end %>