<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Shipment Status</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Shipment Status:</strong>
                    <%= @shipmentstatus.shipmentstatus %>
                </p>

                <% unless @shipmentstatus.shipments.empty? %>
                <p>
                    <strong>Shipments:</strong>
                    <ul style="columns: 3 200px;">
                        <% @shipmentstatus.shipments.each do |shipment| %>
                        <li><%= link_to shipment.shipmentnum, shipment %>
                            (<%= shipment.warehouse.warehousename %>)
                            <% end %>
                        </li>
                    </ul>
                </p>
                <% end %>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_shipmentstatus_path(@shipmentstatus), class: "btn btn-primary" %>
                <%= link_to 'Back', :back, class: "btn btn-secondary" %> </div>
        </div>
    </div>
</div>