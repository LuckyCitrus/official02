<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card card-default">
            <div class="card-header">
                <h1>Login</h1>
            </div>
            <div class="card-body">
                <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :vertical) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", maxlength: 254, required: true %>
                </div>

                <div class="field">
                    <%= f.password_field :password, autocomplete: "current-password", minlength: 6, maxlength: 128, required: true %>
                </div>

                <% if devise_mapping.rememberable? %>
                <div class="field">
                    <%= f.check_box :remember_me %>
                </div>
                <% end %>

                <%= render "devise/shared/links" %>

            </div>
            <div class="card-footer">
                <%= f.submit "Log In", class: 'btn btn-primary', data: { turbolinks: false } %>
                <%= link_to "Sign Up", new_registration_path(resource_name), class: "btn btn-secondary" %>
            </div>
            <% end %>
        </div>
    </div>
</div>