<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card card-default">
            <div class="card-header">
                <h2>Edit <%= resource_name.to_s.humanize %></h2>
            </div>
            <div class="card-body">

                <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :vertical) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email",  maxlength: 254, required: true, placeholder: "Email" %>
                </div>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <div class="field">
                    <%#= f.label :password, "New Password" %>
                    <!--<i>(leave blank if you don't want to change it)</i>-->
                    <%= f.password_field :password, autocomplete: "new-password", minlength: 6, maxlength: 128, help: "Leave blank if password is not changed" %>
                    <!--<% if @minimum_password_length %>
    <br /><em><%= @minimum_password_length %> characters minimum</em>
    <% end %>-->
                </div>

                <div class="field">
                    <%= f.password_field :password_confirmation, label: "Confirm Password", autocomplete: "new-password", minlength: 6, maxlength: 128 %>
                </div>

                <div class="field">
                    <%#= f.label :current_password, "Current Password" %>
                    <!--<i>(we need your current password to confirm your changes)</i>-->
                    <%= f.password_field :current_password, label: "Current Password", autocomplete: "current-password", minlength: 6, maxlength: 128, required: true, help: "Type current password to confirm changes" %>
                </div>

                <div class="actions">
                    <%= f.submit "Update Account", class: 'btn btn-success' %>
                </div><br>
                <% end %>
                <hr>

                <h3>Delete My Account</h3>
                <%= button_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'%><br>


            </div>
            <div class="card-footer">

                <%= link_to 'Back', :back, class: "btn btn-secondary" %>
            </div>
        </div>
    </div>
</div>