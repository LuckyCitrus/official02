<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card card-default">
            <div class="card-header">
                <h1>Sign Up</h1>
            </div>
            <div class="card-body">
                <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :vertical) do |f| %>

                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                    <%= f.email_field :email, autofocus: true, pattern: "[^@]+@[^@]+", autocomplete: "email", maxlength: 254, size: 24, required: true %>
                </div>

                <div class="field">
                    <% if @minimum_password_length %>
                    <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password", minlength: 6, maxlength: 128, size: 24, required: true, help: "Password must be at least 6 characters long" %>
                </div>

                <div class="field">
                    <%= f.password_field :password_confirmation, label: "Confirm Password", autocomplete: "new-password", minlength: 6, maxlength: 128, size: 24, required: true %>
                </div>

                <%= render "devise/shared/links" %><hr>
            <div class="actions">
                <%= f.submit "Sign Up", class: 'btn btn-primary', data: { turbolinks: false } %>
                <%= link_to "Log In", new_session_path(resource_name), class: "btn btn-secondary" %>
            </div>
            <% end %>
            </div>
        </div>
    </div>
</div>