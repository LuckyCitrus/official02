<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card card-default">
            <div class="card-header">
                <h1>Shipment Methods</h1>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Shipment Method</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @shipmentmethods.each do |shipmentmethod| %>
                    <tr>
                        <td><%= link_to shipmentmethod.shipmentmethod, shipmentmethod %></td>
                        <!--<td><%= link_to 'Show', shipmentmethod %></td>-->
                        <td><%= link_to 'Edit', edit_shipmentmethod_path(shipmentmethod) %>
                        <% if current_user.admin? %> / 
                            <%= link_to 'Destroy', shipmentmethod, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="card-footer">
                <%= link_to 'New Shipment Method', new_shipmentmethod_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>

<br>