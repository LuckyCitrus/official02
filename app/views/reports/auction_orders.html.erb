<div class="row row-fluid">
    <div class="col-sm-3">
        <div class="card card-default">
            <div class="card-header">
                <h2>Monthly Orders Per Auctions</h2>
            </div>
            <div class="charts">
                <%= column_chart charts_total_auction_orders_path, 
                    download: {filename: "Monthly_Orders_Per_Auctions_" + Date.today.to_s(:short_date)},
                    colors: ["#64a5d1"],
                    xtitle: "Auction",
                    ytitle: "Orders"
                %><br>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Auction</th>
                        <th>Total Orders</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @auction_orders.each do |auction_order| %>
                    <tr>
                        <td><%= auction_order.auctionname %></td>
                        <td><%= auction_order.total_orders %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="card-footer">
                <%= link_to "View PDF", reports_auction_orders_path(@auction_orders, format: :pdf), class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>

<br>