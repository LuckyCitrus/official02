<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Container</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Container Number:</strong>
                    <%= @container.containernum %>
                </p>
                <p>
                    <strong>Shipment Number:</strong>
                    <%= link_to @container.shipment.shipmentnum, @container.shipment %>
                </p>
                <p>
                    <strong>Company:</strong>
                    <%= link_to @container.company.companyname, @container.company %>
                </p>


                <p>
                    <strong>Orders:</strong>
                    <ul>
                        <% @container.orders.each do |order| %>
                        <li><strong>Order Number: </strong>
                            <%= link_to order.ordernum, order %></li>
                        <% end %>
                    </ul>
                </p>

            
            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_container_path(@container), class: "btn btn-primary" %>
                <%= link_to 'Back', containers_path, class: "btn btn-secondary" %> </div>
        </div>
    </div>
</div>