<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card card-default">
            <div class="card-header">
                <h1>Containers</h1>
            </div>
            <table class="table table-hover table-bordered table responsive">
                <thead class="thead-light">
                    <tr>
                        <th>Container Number</th>
                        <th>Shipment Number</th>
                        <th>Company</th>
                        <th colspan="4"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @containers.each do |container| %>
                    <tr>
                        <td><%= container.containernum %></td>
                        <td><%= container.shipment.shipmentnum %></td>
                        <td><%= container.company.companyname %></td>
                        <td><%= link_to 'Show', container %></td>
                        <td><%= link_to 'Edit', edit_container_path(container) %></td>
                        <td><%= link_to 'Destroy', container, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="card-footer">
                <%= link_to 'New Container', new_container_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>
<br>