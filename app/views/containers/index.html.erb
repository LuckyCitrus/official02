<p id="notice"><%= notice %></p>

<h1>Containers</h1>

<table>
    <thead>
        <tr>
            <th>Container Number</th>
            <th>Shipment Number</th>
            <th>Company</th>
            <th colspan="4"></th>
        </tr>
    </thead>

    <tbody>
        <% @containers.each do |container| %>
        <tr>
            <td><%= container.containernum %></td>
            <td><%= container.shipment.shipmentnum %></td>
            <td><%= container.company.companyname %></td>
            <td><%= link_to 'Show', container %></td>
            <td><%= link_to 'Edit', edit_container_path(container) %></td>
            <td><%= link_to 'Destroy', container, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

