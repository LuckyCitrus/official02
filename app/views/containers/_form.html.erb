<div class="card-body">
    <%= bootstrap_form_with(model: container, local: true, layout: :horizontal) do |form| %>
    <% if container.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(container.errors.count, "error") %> prohibited this container from being saved:</h2>

        <ul>
            <% container.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <%= form.text_field :containernum, label: "Container Number", pattern: '^[a-zA-Z0-9-]*$', minlength: 2, maxlength: 30, size: 24, required: true %>
    </div>

    <div class="field">
        <%= form.collection_select :shipment_id, Shipment.order(:shipmentnum), :id, :shipmentnum, {include_blank: ""}, required: true %>
    </div>

    <div class="field">
        <%= form.collection_select :company_id, Company.order(:companyname), :id, :companyname, {include_blank: ""}, required: true %>
    </div>

    <div class="actions">
        <%= form.submit :Submit, class: 'btn btn-success' %>
    </div>
    <% end %>
</div>