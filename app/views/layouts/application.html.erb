<!DOCTYPE html>
<html>

<head>
    <title>MitsabWebApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

    <% if user_signed_in? %>
    <div id="header">
        <h1>MitsabWebApp</h1>
        <%= link_to "Home", root_path %> |
        <% if current_user.try(:admin?) %>
            <%= link_to "Users", users_path %> |
        <% end %>
        <%= link_to "Employees", employees_path %> | <%= link_to "Customers", customers_path %> | <%= link_to "Cars", cars_path %> | <%= link_to "Orders", orders_path %> | <%= link_to "Invoices", invoices_path %> | <%= link_to "Payments", payments_path %> | <%= link_to "Shipments", shipments_path %>

    </div>

    <p>Logged in as <strong><%= current_user.email %></strong>| |
        <%= link_to "Edit Profile", edit_user_registration_path(current_user) %> |
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %></p>

    <% else %>
    <%= link_to "Sign In", new_user_session_path %> | <%= link_to "Sign Up", new_user_registration_path %>
    <% end %>

    <%=render 'layouts/alerts'%>
    <%= yield %>
</body>

</html>