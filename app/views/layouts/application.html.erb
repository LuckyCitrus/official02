<!DOCTYPE html>
<html>

<head>
    <title>MitsabWebApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

    <% if user_signed_in? %>
    <div id="header">
        <h1>MitsabWebApp</h1>
        <%= link_to "Employees", employees_path %> | <%= link_to "Customers", customers_path %> | <%= link_to "Cars", cars_path %> | <%= link_to "Orders", orders_path %> | <%= link_to "Invoices", invoices_path %> | <%= link_to "Payments", payments_path %> | <%= link_to "Shipments", shipments_path %>
    </div>

    <p>Signed In as</p><strong><%= current_user.email %></strong> |
    <%= link_to "Sign Out", destroy_user_session_path, method :delete %> |
    <%= link_to "Edit Profile", edit_user_registration_path, :class => 'navbar-link' %>

    <% else %>
    <% end %>

    <%=render 'layouts/alerts'%>
    <%= yield %>
</body>

</html>