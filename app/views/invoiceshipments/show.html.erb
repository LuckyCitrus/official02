<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Invoice Shipment</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Shipment #:</strong>
                    <%= link_to @invoiceshipment.shipment.shipmentnum, @invoiceshipment.shipment %>
                </p>
                <p>
                    <strong>Invoice #:</strong>
                    <%= link_to @invoiceshipment.invoice.invoicenum, @invoiceshipment.invoice %>
                </p>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit',  edit_invoiceshipment_path(@invoiceshipment), class: "btn btn-primary" %>
                <%= link_to 'Back', controller: "invoiceshipments" %>
            </div>
        </div>
    </div>
</div>