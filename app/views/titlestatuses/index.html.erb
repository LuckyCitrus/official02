<div class="row row-fluid">
    <div class="col-md-8 col-md-offset-2">
        <div class="card card-default">
            <div class="card-heading">
                <h1>Title Statuses</h1>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Title Status</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @titlestatuses.each do |titlestatus| %>
                        <tr>
                            <td><%= titlestatus.titlestatus %></td>
                            <td><%= link_to 'Show', titlestatus %></td>
                            <td><%= link_to 'Edit', edit_titlestatus_path(titlestatus) %></td>
                            <td><%= link_to 'Destroy', titlestatus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <%= link_to 'New Title Status', new_titlestatus_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>

<br>