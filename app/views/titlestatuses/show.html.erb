<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Title Status</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Title Status:</strong>
                    <%= @titlestatus.titlestatus %>
                </p>

                <% unless @titlestatus.cars.empty? %>
                <p>
                    <strong>Cars:</strong>
                    <ul style="columns: 3 200px;">
                        <% @titlestatus.cars.each do |car| %>
                        <li><%= link_to car.try(:car_info), car %>
                            <% end %>
                        </li>
                    </ul>
                </p>
                <% end %>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_titlestatus_path(@titlestatus), class: "btn btn-primary" %>
                <%= link_to 'Back', titlestatuses_path, class: "btn btn-secondary" %>
            </div>

        </div>
    </div>
</div>