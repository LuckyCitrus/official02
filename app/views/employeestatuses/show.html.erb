<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Employee Status</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Employee Status:</strong>
                    <%= @employeestatus.employeestatus %>
                </p>

                <% unless @employeestatus.employees.empty? %>
                <p>
                    <strong>Employees:</strong>
                    <ul style="columns: 3 200px;">
                        <% @employeestatus.employees.each do |employee| %>
                        <li><%= link_to employee.try(:emp_fullname), employee %>
                            <% end %>
                        </li>
                    </ul>
                </p>
                <% end %>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit',  edit_employeestatus_path(@employeestatus), class: "btn btn-primary" %>
                <%= link_to 'Back', :back, class: "btn btn-secondary" %> </div>
        </div>
    </div>
</div>