<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Invoicedate</th>
      <th>Duedate</th>
      <th>Customer</th>
      <th>Employee</th>
      <th>Order</th>
      <th>Payment</th>
      <th>Car</th>
      <th>Shipment</th>
      <th>Auction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.invoicedate %></td>
        <td><%= invoice.duedate %></td>
        <td><%= invoice.customer_id %></td>
        <td><%= invoice.employee_id %></td>
        <td><%= invoice.order_id %></td>
        <td><%= invoice.payment_id %></td>
        <td><%= invoice.car_id %></td>
        <td><%= invoice.shipment_id %></td>
        <td><%= invoice.auction_id %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

