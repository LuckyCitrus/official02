        </ul>
    </div>
    <% end %>--><%= errors_for(@invoice) %>

    <div class="field">
        <%= form.text_field :invoicenum, label: "Invoice Number", pattern: '^[a-zA-Z0-9-]*$', help: "Only numeric characters are allowed", maxlength: 128, disabled: false if @invoice.persisted? %>
    </div>

    <div class="field">
        <%= form.text_field :invoicedate, label: "Invoice Date", data: { behavior: "flatpickr" }, required: true %>
    </div>

    <div class="field">
        <%= form.text_field :duedate, label: "Due Date", data: { behavior: "flatpickr" }, required: true %>
    </div>

    <div class="field">
        <%= form.collection_select :customer_id, Customer.where("id > 0").order(created_at: :desc), :id, :cus_fullname, {include_blank: ""}, required: true %>
    </div>

    <div class="field">
        <%= form.collection_select :employee_id, Employee.where("id > 0").order(created_at: :desc), :id, :emp_fullname, {include_blank: ""}, required: true %>
    </div>

    <div class="field">
        <%= form.collection_select :invoicestatus_id, Invoicestatus.where("id > 0").order(created_at: :desc), :id, :invoicestatus, {include_blank: ""}, required: true %>
    </div>

    <div class="field">
        <%= form.number_field :amountdue, label: "Amount Due", value: number_with_precision(invoice.amountdue, precision: 2), min: 0, step: 0.01,required: true %>
    </div>

    <div class="actions">
        <%= form.submit :Submit, class: 'btn btn-success' %>
    </div>
    <% end %>
</div>