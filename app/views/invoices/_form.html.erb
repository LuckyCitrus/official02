<div class="col-xs-12">   

    <%= bootstrap_form_with(model: invoice, local: true, layout: :horizontal) do |form| %>
        <% if invoice.errors.any? %>
        
        <div id="error_explanation">
            <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>
    
            <ul>
                <% invoice.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
        
    
        <div id="invoice-wrap">
  
   
        <div class="row">
        <div class="col-xs-12">
            <h3 style="margin-left: 1.5em;" class="page-header">INVOICE</h3>
            </div><!-- /.col -->
        
        </div>
        <hr>
        
        
        <div class="row invoice-info">
        <div class="col-xs-4 invoice-col2">
        
           
            <address>
            <div class="field" style="margin-left: 1.5em; padding-top: 30px;">
                <%= form.text_field :invoicenum, label: "Invoice Number", pattern: '^[a-zA-Z0-9-]*$', minlength: 2, maxlength: 30, required: true %>
            </div>
            
            <div class="field" style="margin-left: 1.5em; padding-top: 30px;">
                <%= form.text_field :invoicedate, label: "Invoice Date",required: true, data: { behavior: "flatpickr" }, required: true %>
            </div>
            
            <div class="field" style="margin-left: 1.5em; padding-top: 25px;">
                <%= form.text_field :duedate, label: "Due Date",required: true, data: { behavior: "flatpickr" }, required: true %>
            </div>
            </address>        
        </div><!-- /.col -->

        
        <div class="col-xs-4 invoice-col">
            
            <address>
            <div class="field ">
           
            <%= form.collection_select :customer_id, Customer.all, :id, :cus_fullname,  {include_blank: ""}, {class: "cust-id"}%>
            </div>
            

            <div class="field">
                <%= form.collection_select :employee_id, Employee.all, :id, :emp_fullname, {include_blank: ""}, required: true %>
            </div>
        
            <div class="field">
                <%= form.collection_select :invoicestatus_id, Invoicestatus.order(:invoicestatus), :id, :invoicestatus, {include_blank: ""}, required: true %>
            </div>
            </address>

        </div><!-- /.col -->


        <div class="col-xs-4 invoice-col">
            <form class="form-horizontal">

            <address>
                    
            <p style="padding-top: 35px;">
            <input class="form-group selected_id" value=""/>
            </p>
        
            </address>
        
        </div><!-- /.form -->
        </div><!-- /.col -->

        
        <!--Beginnig of table area with row add items-->

        <div class="row">
        <div class="col-xs-12 table-responsive">
        <hr>
        <table class="table table-hover" id="items">

        <thead>
        <th class="item-name">Order ID</th>
        <th class="description">Description</th>
        <th class="unit">Unit Cost</th>
        <th class="quantity">Quantity</th>
        <th class="units">Amount Due</th>
        <th class="no_print">Actions</th>
        </thead>
    
        <!-- First Row beginning -->
    
    <tbody>
      <tr class="item-row">
        <td><input class="form-control order_selected_id" value="Order #" /></td>
        <td><textarea  rows="3" class="form-control item_desc">Items List</textarea></td>
        <td><input class="form-control cost" value="0.00" /></td>
        <td><input class="form-control qty" value="0" /></td>
        <td><input class="form-control price" value="0.00" /><span class="subtotal_currency"></span></td>
        <td class="delete_td"><a class="delete" href="javascript:;" title="Remove row"><span class="ti-close"></span></a></td>
      </tr>
    

      <!--225  Column Beginning -->

      
      <tr id="hiderow">
      <!--Add Row Button  <td colspan="6"><a id="addrow" class="btn btn-success btn-sm" href="javascript:;" title="Add a row"><span class="ti-plus"></span>  Add a row</a></td> -->
      </tr>
    </tbody>
    </table>
    </div>
    </div>
    
    <!-- Deleted totals area -->              

    <div class="row">
    <div class="col-xs-6 col-xs-offset-6">
    <div class="table-responsive">
   
    </div>


        </div><!-- /.col -->    
        </div><!-- /.row --> 


        <!-- Begging of Shipping Table --> 

        <div class="row">
        <div class="col-xs-12 table-responsive">
        <hr>
        <table class="table table-hover" id="items">

        <thead>
        <th class="item-name">Container No.</th>
        <th class="description">Location</th>
        <th class="">Warehouse</th>
        <th class="quantity">Via</th>
        <th class="no_print">Actions</th>
        </thead>
    
        <!-- First row beginning -->
    
    <tbody>
      <tr class="item-row">
        <td><input class="form-control cointainer_num" value="Number #" /></td>
        <td><input class="form-control location" value="Location Address" /></td>
        <td><input class="form-control warehouse" value="Warehouse" /></td>
        <td><input class="form-control method" value="" /></td>
        <td class="delete_td"><a class="delete" href="javascript:;" title="Remove row"><span class="ti-close"></span></a></td>
      </tr>
    </tbody>
    </table>

    </div>
    </div>
    
    <!-- Beginning of totals area -->              

    <div class="row">
    <div class="col-xs-6 col-xs-offset-6">

    
    <div class="table-responsive">
    <table class="table table-hover" id="totals">
      <tr>
        <th style="width:50%">Subtotal:</th>
        <td><input class="form-control subtotal" value="0.00" /></td>
      </tr>
      <tr>
        <th>Tax Rate:</th>
        <td><input id="9" class="form-control" value="6.25" /></td>
      </tr>
     

        </table>
    </div>
    </div>
    </div>


        <div class="col-xs-4 invoice-col">

        <adress>
        <div class="field row">
            <%= form.number_field :amountdue, :class => "total", label: "Total:", value: number_with_precision(invoice.amountdue, precision: 2), min: 0, step: 0.01,required: true %>
            </div>
        
        <div class="actions">
            <%= form.submit :Submit, class: 'btn btn-success' %>
        </div> 
        </address>    
        
        </div><!-- End of Row -->
           
        <div id="terms">
        <h5>Terms</h5>
        <textarea id="10">Payment terms: net 30. Interest accrued at 1.5% per month thereafter.</textarea>
        </div>
        </div><!-- ? -->
        
        <% end %><!--End of fucntion-->   
    </div>
</div>
