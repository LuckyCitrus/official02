<%= form_with(model: invoice, local: true) do |form| %>
<% if invoice.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

    <ul>
        <% invoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= form.label :invoicedate, "Invoice Date" %>
    <%= form.date_select :invoicedate %>
</div>

<div class="field">
    <%= form.label :duedate, "Due Date" %>
    <%= form.date_select :duedate %>
</div>

<div class="field">
    <%= form.label :customer_id %>
    <%= form.collection_select :customer_id, Customer.all, :id, :cus_fullname %>
</div>

<div class="field">
    <%= form.label :employee_id %>
    <%= form.collection_select :employee_id, Employee.all, :id, :emp_fullname %>
</div>

<div class="field">
    <%= form.label :order_id %>
    <%= form.text_field :order_id %>
</div>

<div class="field">
    <%= form.label :payment_id %>
    <%= form.text_field :payment_id %>
</div>

<div class="field">
    <%= form.label :car_id %>
    <%= form.collection_select :car_id, Car.all, :id, :car_name %>
</div>

<div class="field">
    <%= form.label :shipment_id %>
    <%= form.text_field :shipment_id %>
</div>

<div class="field">
    <%= form.label :auction_id %>
    <%= form.collection_select :auction_id, Auction.order(:auctionname), :id, :auctionname %>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>