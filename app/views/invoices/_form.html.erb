<%= form_with(model: invoice, local: true) do |form| %>
<% if invoice.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

    <ul>
        <% invoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= form.label :invoicenum, "Invoice Number" %>
    <%= form.text_field :invoicenum %>
</div>

<div class="field">
    <%= form.label :invoicedate, "Invoice Date" %>
    <%= form.date_select :invoicedate %>
</div>

<div class="field">
    <%= form.label :duedate, "Due Date" %>
    <%= form.date_select :duedate %>
</div>

<div class="field">
    <%= form.label :customer_id %>
    <%= form.collection_select :customer_id, Customer.all, :id, :cus_fullname, {include_blank: ""}  %>
</div>

<div class="field">
    <%= form.label :employee_id %>
    <%= form.collection_select :employee_id, Employee.all, :id, :emp_fullname, {include_blank: ""}  %>
</div>

<div class="field">
    <%= form.label :invoicestatus_id, "Invoice Status" %>
    <%= form.collection_select :invoicestatus_id, Invoicestatus.order(:invoicestatus), :id, :invoicestatus, {include_blank: ""} %>
</div>

<div class="field">
    <%= form.label :amountdue, "Amount Due" %>
    <%= form.text_field :amountdue %>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>