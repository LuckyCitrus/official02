<div class="card border-primary mb-3" style="max-width: 160rem;">
  <div class="card-header">

    <% if @invoice.orders %>
    <%= link_to "View PDF", invoice_path(@invoice, format: :pdf), class: "btn btn-outline-primary" %>
    <% end %>
  </div>
  <div class="card-body">

    <div class="col-xs-12">

      <div id="invoice-wrap">

        <div class="row">
          <div class="col-xs-12">
            <h3 style="margin-left: 1.5em;" class="page-header">INVOICE</h3>
          </div><!-- /.col -->

        </div>
        <hr>


        <div class="row invoice-info">
          <div class="col-xs-4 invoice-col">


            <address>
              <p style="margin-left: 1.5em; padding-top: 20px;">
                <strong>Invoice Number:</strong>
                <%= @invoice.invoicenum %>
              </p>


              <p style="margin-left: 1.5em; padding-top: 20px;">
                <strong>Invoice Date:</strong>
                <%= @invoice.invoicedate.to_s(:long_date) %>
              </p>

              <p style="margin-left: 1.5em; padding-top: 20px;">
                <strong>Due Date:</strong>
                <%= @invoice.duedate.to_s(:long_date) %>
              </p>
            </address>

          </div><!-- /.col -->

          <div class="col-xs-4 invoice-col2">


            <address>
              <p style="margin-left: 4.5em; padding-top: 20px;">
                <strong>Customer:</strong>
                <%= link_to @invoice.customer.cus_fullname, @invoice.customer %>

              </p>

              <p style="margin-left: 4.5em; padding-top: 20px;">
                <strong>Employee:</strong>
                <%= link_to @invoice.employee.emp_fullname, @invoice.employee %>
              </p>
              <p style="margin-left: 4.5em; padding-top: 20px;">
                <strong>Invoice Status:</strong>
                <%= @invoice.invoicestatus.invoicestatus %>
              </p>
            </address>


          </div><!-- /.col -->


          <div class="col-xs-4 invoice-col2">
            <form class="form-horizontal">

              <p style="margin-left: 4.5em; padding-top: 20px;">
                <strong>Customer ID:</strong>
                <%= number_field_tag @invoice.customer, @invoice.customer.id, class: 'form-group cust_id' %>
              </p>
            </form>
          </div><!-- /.form -->
        </div><!-- /.col -->


        <!--Beginnig of table area with row add items-->

        <div class="row">
          <div class="col-xs-12 table-responsive">
            <hr>
            <table class="table table-hover" id="items">

              <thead>
              <th class="item-name">Order ID</th>
              <th class="description">Description</th>
              <th class="unit">Unit Cost</th>
              <th class="quantity">Quantity</th>
              <th class="units">Amount Due</th>
              <th class="no_print">Actions</th>
              </thead>

              <!-- First Row beginning -->

              <tbody>
              <tr class="item-row">
                <td><input class="form-control order_selected_id" value="Order #"/></td>
                <td><textarea rows="3" class="form-control item_desc">Items List</textarea></td>
                <td><input class="form-control cost" value="0.00"/></td>
                <td><input class="form-control qty" value="0"/></td>
                <td><input class="form-control price" value="0.00"/><span class="subtotal_currency"></span></td>
                <td class="delete_td">
                  <a class="delete" href="javascript:;" title="Remove row"><span class="ti-close"></span></a></td>
              </tr>


              <!--225  Column Beginning -->


              <tr id="hiderow">
                <!--Add Row Button  <td colspan="6"><a id="addrow" class="btn btn-success btn-sm" href="javascript:;" title="Add a row"><span class="ti-plus"></span>  Add a row</a></td> -->
              </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Deleted totals area -->

        <div class="row">
          <div class="col-xs-6 col-xs-offset-6">
            <div class="table-responsive">

            </div>


          </div><!-- /.col -->
        </div><!-- /.row -->


        <!-- Begging of Shipping Table -->

        <div class="row">
          <div class="col-xs-12 table-responsive">
            <hr>
            <table class="table table-hover" id="items">

              <thead>
              <th class="item-name">Container No.</th>
              <th class="description">Location</th>
              <th class="">Warehouse</th>
              <th class="quantity">Via</th>
              <th class="no_print">Actions</th>
              </thead>

              <!-- First row beginning -->

              <tbody>
              <tr class="item-row">
                <td><input class="form-control cointainer_num" value="Number #"/></td>
                <td><input class="form-control location" value="Location Address"/></td>
                <td><input class="form-control warehouse" value="Warehouse"/></td>
                <td><input class="form-control method" value=""/></td>
                <td class="delete_td">
                  <a class="delete" href="javascript:;" title="Remove row"><span class="ti-close"></span></a></td>
              </tr>
              </tbody>
            </table>

          </div>
        </div>

        <!-- Beginning of totals area -->

        <div class="row">
          <div class="col-xs-6 col-xs-offset-6">


            <div class="table-responsive">
              <table class="table table-hover" id="totals">
                <tr>
                  <th style="width:50%">Subtotal:</th>
                  <td><input class="form-control subtotal" value="0.00"/></td>
                </tr>
                <tr>
                  <th>Tax Rate:</th>
                  <td><input id="9" class="form-control" value="6.25"/></td>
                </tr>

              </table>
            </div>
          </div>
        </div>


        <div class="col-xs-4 invoice-col">

          <address>
            <p>
              <strong>Amount Due:</strong>
              <%= number_to_currency(@invoice.amountdue) %>
            </p>

            </address>

            <div id="terms">
              <h5>Terms</h5>
              <textarea id="10">Payment terms: net 30. Interest accrued at 1.5% per month thereafter.</textarea>
            </div>
        </div><!-- ? -->

      </div><!-- End of Row -->


    </div>
  </div>

  <div class="card-footer">
    <%= link_to 'Edit', invoices_path(@invoice), class: "btn btn-primary" %>
    <%= link_to 'Back', invoices_path, class: "btn btn-secondary" %> </div>
</div>

</div>
</div>    