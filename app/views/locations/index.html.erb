<div class="row row-fluid">
    <div class="col-sm-4">
        <div class="card card-default">
            <div class="card-header">
                <h1>Locations</h1>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>City</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @locations.each do |location| %>
                    <tr>
                        <td><%= link_to location.city, location %></td>
                        <!--<td><%= link_to 'Show', location %></td>-->
                        <td><%= link_to 'Edit', edit_location_path(location) %>
                        <% if current_user.admin? %> / 
                            <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="card-footer">
                <%= link_to 'New Location', new_location_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>

<br>