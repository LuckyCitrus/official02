<%= form_with(model: location, local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
        <% location.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

<%# Nested Form Form %>
  <h3>Warehouses</h3>
  <div id='warehouses'>
    <%= form.fields_for :warehouses do |warehouse| %>
      <%= render 'warehouse_fields', :f => warehouse %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add Warehouse', form, :warehouses %>
    </div>
  </div>
<%# End of Nested Form Form %>

<%# Nested Form Form %>
  <h3>Auctions</h3>
  <div id='auctions'>
    <%= form.fields_for :auctions do |auction| %>
      <%= render 'auction_fields', :f => auction %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add Auction', form, :auctions %>
    </div>
  </div><br><br>
<%# End of Nested Form Form %>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
