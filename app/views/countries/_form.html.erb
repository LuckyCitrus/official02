<div class="card-body">
    <%= form_with(model: country, local: true) do |form| %>
    <% if country.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(country.errors.count, "error") %> prohibited this country from being saved:</h2>

        <ul>
            <% country.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <%= form.label :country_name, "Country Name" %>
        <%= form.text_field :country_name, minlength: 2, maxlength: 60, size: 24, required: true %>
    </div>

    <div class="actions">
        <%= form.submit :Submit, class: 'btn btn-success' %>
    </div>
    <% end %>
</div>