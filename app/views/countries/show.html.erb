<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Country</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Country Name:</strong>
                    <%= @country.country_name %>
                </p>

                <% unless @country.customers.empty? %>
                <p>
                    <strong>Customers:</strong>
                    <ul>
                        <% @country.customers.each do |customer| %>
                        <li><strong>Customer: </strong>
                            <%= link_to customer.try(:cus_fullname), customer %>
                            <% end %>
                        </li>
                    </ul>
                </p>
                <% end %>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_country_path(@country), class: "btn btn-primary" %>
                <%= link_to 'Back', controller: "countries" %>
            </div>
        </div>
    </div>
</div>