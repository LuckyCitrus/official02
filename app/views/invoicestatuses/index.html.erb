<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card card-default">
            <div class="card-header">
                <h1>Invoice Statuses</h1>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Invoice Status</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @invoicestatuses.each do |invoicestatus| %>
                    <tr>
                        <td><%= link_to invoicestatus.invoicestatus, invoicestatus %></td>
                        <!--<td><%= link_to 'Show', invoicestatus %></td>-->
                        <td><%= link_to 'Edit', edit_invoicestatus_path(invoicestatus) %>
                        <% if current_user.admin? %> / 
                        <%= link_to 'Destroy', invoicestatus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="card-footer">
                <%= link_to 'New Invoice Status', new_invoicestatus_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>

<br>