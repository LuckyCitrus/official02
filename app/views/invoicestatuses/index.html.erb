<div class="row row-fluid">
    <div class="col-md-8 col-md-offset-2">
        <div class="card card-default">
            <div class="card-heading">
                <h1>Invoice Statuses</h1>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Invoice Status</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @invoicestatuses.each do |invoicestatus| %>
                        <tr>
                            <td><%= invoicestatus.invoicestatus %></td>
                            <td><%= link_to 'Show', invoicestatus %></td>
                            <td><%= link_to 'Edit', edit_invoicestatus_path(invoicestatus) %></td>
                            <td><%= link_to 'Destroy', invoicestatus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <%= link_to 'New Invoice Status', new_invoicestatus_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>

<br>