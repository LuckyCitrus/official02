<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Invoice Status</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Invoice Status:</strong>
                    <%= @invoicestatus.invoicestatus %>
                </p>

                <% unless @invoicestatus.invoices.empty? %>
                <p>
                    <strong>Invoices:</strong>
                    <ul style="columns: 3 200px;">
                        <% @invoicestatus.invoices.each do |invoice| %>
                        <li><%= link_to invoice.invoicenum, invoice %>
                        (<%= invoice.customer.try(:cus_fullname) %>)
                            <% end %>
                        </>
                    </ul>
                </p>
                <% end %>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_invoicestatus_path(@invoicestatus), class: "btn btn-primary" %>
                <%= link_to 'Back', invoicestatuses_path, class: "btn btn-secondary" %> </div>
        </div>
    </div>
</div>