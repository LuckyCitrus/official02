<%= form_with(model: car, local: true) do |form| %>
<% if car.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

    <ul>
        <% car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= form.label :vinnumber, "VIN Number" %>
    <%= form.text_field :vinnumber %>
</div>

<div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
</div>

<div class="field">
    <%= form.label :make %>
    <%= form.text_field :make %>
</div>

<div class="field">
    <%= form.label :model %>
    <%= form.text_field :model %>
</div>

<div class="field">
    <%= form.label :titlestatus_id %>
    <%= form.collection_select :titlestatus_id, Titlestatus.order(:titlestatus), :id, :titlestatus %>
</div>

<div class="field">
    <%= form.label :keystatus_id, "Key Status" %>
    <%= form.collection_select :keystatus_id, Keystatus.order(:keystatus), :id, :keystatus %>
</div>

<div class="field">
    <%= form.label :order_id %>
    <%= form.collection_select :order_id, Order.order(:ordernum), :id, :ordernum %>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>