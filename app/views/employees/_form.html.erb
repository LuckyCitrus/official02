<%= form_with(model: employee, local: true) do |form| %>
<% if employee.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

    <ul>
        <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= form.label :empfname, "First Name" %>
    <%= form.text_field :empfname %>
</div>

<div class="field">
    <%= form.label :emplname, "Last Name" %>
    <%= form.text_field :emplname %>
</div>

<div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
</div>

<div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
</div>

<div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
</div>

<div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
</div>

<div class="field">
    <%= form.label :hiredate, "Hire Date" %>
    <%= form.date_select :hiredate %>
</div>

<!--<div class="field">
    <%= form.label :company_id %>
    <%= form.text_field :company_id %>
  </div>-->

<div class="field">
    <%= form.label :department_id %>
    <%= form.collection_select :department_id, Department.order(:departmentname), :id, :departmentname %>
</div>

<div class="field">
    <%= form.label :employeestatus_id, "Employee Status" %>
    <%= form.collection_select :employeestatus_id, Employeestatus.order(:employeestatus), :id, :employeestatus %>
</div>

<div class="field">
    <%= form.label :dummyuser_id, "Dummy User" %>
    <%= form.collection_select :dummyuser_id, Dummyuser.order(:id), :id, :id %>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>