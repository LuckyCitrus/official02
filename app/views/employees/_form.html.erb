<div class="card-body">
    <%= bootstrap_form_with(model: @employee, local: true, layout: :horizontal ) do |form| %>
    <% if employee.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

        <ul>
            <% employee.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <%= form.text_field :empfname, label: "First Name", pattern: "^[a-zA-Z-']*$", minlength: 2, maxlength: 36, required: true %>
    </div>

    <div class="field">
        <%= form.text_field :emplname,label: "Last Name", pattern: "^[a-zA-Z-']*$", minlength: 2, maxlength: 36, required: true %>
    </div>

    <div class="field">
        <%= form.text_field :address, pattern: "^[#'.0-9a-zA-Z\s,-]*$", minlength: 5, maxlength: 72, required: true %>
    </div>

    <div class="field">
        <%= form.email_field :email, pattern: "[^@]+@[^@]+", minlength: 5, maxlength: 254, required: true %>
    </div>

    <div class="field">
        <%= form.telephone_field :phone, pattern: '[^a-zA-Z]*', minlength: 5, maxlength: 24, required: true %>
    </div>

    <div class="field">
        <%= form.text_field :title, minlength: 2, maxlength: 36, required: true %>
    </div>

    <div class="field">
        <%= form.text_field :hiredate, label: "Hire Date", data: { behavior: "flatpickr" }, required: true %>
    </div>

    <div class="field">
        <%= form.collection_select :department_id, Department.order(:departmentname), :id, :departmentname, {include_blank: ""} %>
    </div>

    <div class="field">
        <%= form.collection_select :employeestatus_id, Employeestatus.order(:employeestatus), :id, :employeestatus, {include_blank: ""}, required: true %>
    </div>

    <div class="field">
        <%= form.collection_select :user_id, User.order(:email), :id, :email, {include_blank: ""} %>
    </div>

    <div class="actions">
        <%= form.submit :Submit, class: 'btn btn-success' %>
    </div>
    <% end %>
</div>