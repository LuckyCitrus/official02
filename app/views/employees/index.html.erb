<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Title</th>
      <th>Hire Date</th>
<!--      <th>Company</th>-->
      <th>Department</th>
      <th>Employee Status</th>
      <th>Dummy User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.empfname %></td>
        <td><%= employee.emplname %></td>
        <td><%= employee.address %></td>
        <td><%= employee.email %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.title %></td>
        <td><%= employee.hiredate %></td>
        <td><%= employee.department.departmentname %></td>
        <td><%= employee.employeestatus.employeestatus %></td>
        <td><%= employee.dummyuser.id %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

