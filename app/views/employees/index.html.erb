<div class="row row-fluid">
    <div class="col-md-8 col-md-offset-2">
        <div class="card card-default">
            <div class="card-header">
                <h1>Employees</h1>
            </div>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Address</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Title</th>
                            <th>Hire Date</th>
                            <th>Department</th>
                            <th>Employee Status</th>
                            <th>User</th>
                            <th colspan="11"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @employees.each do |employee| %>
                        <tr>
                            <td><%= employee.empfname %></td>
                            <td><%= employee.emplname %></td>
                            <td><%= employee.address %></td>
                            <td><%= employee.email %></td>
                            <td><%= employee.phone %></td>
                            <td><%= employee.title %></td>
                            <td><%= employee.hiredate %></td>
                            <td><%= employee.department.departmentname %></td>
                            <td><%= employee.employeestatus.employeestatus %></td>
                            <td><%= employee.user.try(:email) %></td>
                            <td><%= link_to 'Show', employee %></td>
                            <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
                            <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            <div class="card-footer">
                <%= link_to 'New Employee', new_employee_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>

<br>