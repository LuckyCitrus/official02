<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Payment Number</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Paymentstatus</th>
      <th>Paymentmethod</th>
      <th>Customer ID</th>
      <th>Invoice ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.paymentnum %></td>
        <td><%= payment.date %></td>
        <td><%= payment.paymentnum %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.paymentstatus.paymentstatus %></td>
        <td><%= payment.paymentmethod.paymenttype %></td>
        <td><%= payment.customer.last_name %></td>
        <td><%= payment.invoice_id %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

