<%= form_with(model: payment, local: true) do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :paymentnum %>
    <%= form.text_field :paymentnum %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>

  <div class="field">
    <%= form.label :paymentstatus_id %>
    <%= form.collection_select :paymentstatus_id, Paymentstatus.order(:paymentstatus), :id, :paymentstatus %>
  </div>

  <div class="field">
    <%= form.label :paymentmethod_id %>
    <%= form.collection_select :paymentmethod_id, Paymentmethod.order(:paymenttype), :id, :paymenttype %>
  </div>

  <div class="field">
    <%= form.label :customer_id %>
    <%= form.collection_select :customer_id, Customer.order(:last_name), :id, :last_name %>
  </div>

  <div class="field">
    <%= form.label :invoice_id %>
    <%= form.collection_select :invoice_id, Invoice.order(:id), :id, :id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
