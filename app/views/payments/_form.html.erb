<%= form_with(model: payment, local: true) do |form| %>
<% if payment.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

    <ul>
        <% payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= form.label :paymentnum, "Payment Number" %>
    <%= form.text_field :paymentnum, pattern: '^[a-zA-Z0-9-]*$', required: true %>
</div>

<div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, required: true %>
</div>

<div class="field">
    <%= form.label :customer_id, "Customer" %>
    <%= form.collection_select :customer_id, Customer.all, :id, :cus_fullname, {include_blank: ""}, required: true %>
</div>

<div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount, value: number_with_precision(payment.amount, precision: 2), min: 0, step: 0.01,required: true %>
</div>

<div class="field">
    <%= form.label :paymentstatus_id, "Payment Status" %>
    <%= form.collection_select :paymentstatus_id, Paymentstatus.order(:paymentstatus), :id, :paymentstatus, {include_blank: ""}, required: true %>
</div>

<div class="field">
    <%= form.label :paymentmethod_id, "Payment Method" %>
    <%= form.collection_select :paymentmethod_id, Paymentmethod.order(:paymenttype), :id, :paymenttype, {include_blank: "" }, required: true %>
</div>

<div class="field">
    <%= form.label :invoice_id, "Invoice Number" %>
    <%= form.collection_select :invoice_id, Invoice.order(:invoicenum), :id, :invoicenum, {include_blank: ""}, required: true%>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>