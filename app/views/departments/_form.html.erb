<div class="card-body">
    <%= form_with(model: department, local: true) do |form| %>
    <% if department.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:</h2>

        <ul>
            <% department.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <%= form.label :departmentname, "Department Name"%>
        <%= form.text_field :departmentname, minlength: 3, maxlength: 36, size: 24, required: true %>
    </div>

    <div class="field">
        <%= form.label :company_id %>
        <%= form.collection_select :company_id, Company.order(:companyname), :id, :companyname, {include_blank: ""}, required: true %>
    </div>

    <div class="actions">
        <%= form.submit :Submit, class: 'btn btn-success' %>
    </div>
    <% end %>
</div>