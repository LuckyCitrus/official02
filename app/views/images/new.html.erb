<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card card-default">
            <div class="card-header">
                <h1>New Image</h1>
            </div>

          <div class="card-body">
            <%= bootstrap_form_with(model: @image, local: true, layout: :vertical) do |f| %>
              <% if @image.errors.any? %>
                <div class="alert alert-danger">
                  <p>The following errors prevent the image from being uploaded.</p>

                  <ul>
                    <% image.errors.full_messages.each do |error| %>
                      <li><%= error %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-group">
                <%= f.file_field :image %>
              </div>

              <div class=" field">
                <%= f.collection_select :order_id, Order.all, :id, :ordernum, {include_blank: ""} %>
              </div>

              <div class=" form-group">
                <%= f.text_area :description, class: 'form-control' %>
              </div>

              <%= f.submit :Submit, class: 'btn btn-success' %>
            <% end %>

          </div>

            <div class="card-footer">
                <%= link_to 'Back', :back, class: "btn btn-secondary" %>
            </div>
        </div>
    </div>
</div>