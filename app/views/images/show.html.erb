<div class="row row-fluid">
    <div class="col-md-4">
        <div class="card">
            <div class="view overlay">
                <%= image_tag @image.image, class:"card-img-top img-fluid" %>
                <div class="mask rgba-white-slight"></div>
                </a>
            </div>

            <div class="card-body">

                <h4 class="card-title">Order # <%= @image.order.ordernum%></h4>
                <% if @image.description.present? %>
                <p class="card-text"><%= @image.description %></p>
                <% end %>
                <p class="border-top mt-3 py-2">
                    Posted by
                    <% if current_user.admin? %>
                    <%= link_to @image.user.email, @image.user %>
                    <% else %>
                    <% @image.user.email%> 
                    <% end %> - 
                    <span class="text-muted"><%= time_ago_in_words @image.created_at %> ago</span>
                </p>
            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_image_path(@image), class: "btn btn-primary" %>
                <%= link_to 'Back', images_path, class: "btn btn-secondary" %>
            </div>
        </div>
    </div>
</div>