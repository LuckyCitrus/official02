<br><br><br>
<h2>Images Gallery</h2>
<br><br><br><br>
<div class="card-columns">
  <% @images.each do |image| %>
    <div class="card">
      <div class="card-body p-1">

        <%= image_tag image.image, class: 'd-block w-100' if image.image.attached?%>

        <p class="my-1"><u><b>Description:</b></u> <%= image.description %></p>
        <p class="my-1"><u><b>User:</b></u> <%= image.order.customer.user.email %></p>
        <p class="my-1"><u><b>Order Number:</b></u> <%= image.order.ordernum %></p>

        <%= link_to "View Image", image_path(image.id), class: 'btn btn-secondary stretched-link' %>
      </div>
    </div>
  <% end %>
</div>