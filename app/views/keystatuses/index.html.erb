<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card card-default">
            <div class="card-header">
                <h1>Key Statuses</h1>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Key Status</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @keystatuses.each do |keystatus| %>
                    <tr>
                        <td><%= link_to keystatus.keystatus, keystatus %></td>
                        <!--<td><%= link_to 'Show', keystatus %></td>-->
                        <td><%= link_to 'Edit', edit_keystatus_path(keystatus) %>
                        <% if current_user.admin? %> / 
                            <%= link_to 'Destroy', keystatus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="card-footer">
                <%= link_to 'New Key Status', new_keystatus_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>

<br>