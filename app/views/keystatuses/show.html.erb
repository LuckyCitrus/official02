<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Key Status</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Key Status:</strong>
                    <%= @keystatus.keystatus %>
                </p>

                <% unless @keystatus.cars.empty? %>
                <p>
                    <strong>Cars:</strong>
                    <ul style="columns: 3 200px;">
                        <% @keystatus.cars.each do |car| %>
                        <li><%= link_to car.try(:car_info), car %>
                            <% end %>
                        </li>
                    </ul>
                </p>
                <% end %>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_keystatus_path(@keystatus), class: "btn btn-primary" %>
                <%= link_to 'Back', keystatuses_path, class: "btn btn-secondary" %> </div>
        </div>
    </div>
</div>