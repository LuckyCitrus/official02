    <% end %>--><%= errors_for(@customer) %>

    <div class="field">
        <%= form.text_field :first_name, label: "First Name", pattern: "^[a-zA-Z-']*$", help: "Only alphabetical characters allowed", maxlength: 128, required: true %>
    </div>

    <div class="field">
        <%= form.text_field :last_name, label: "Last Name", pattern: "^[a-zA-Z-']*$", help: "Only alphabetical characters allowed", maxlength: 128, required: true %>
    </div>

    <div class="field">
        <%= form.text_field :address, pattern: "^[#'.0-9a-zA-Z\s,-]*$", maxlength: 128, required: true %>
    </div>

    <div class="field">
        <%= form.telephone_field :phone, pattern: '[^a-zA-Z]*', help: "No alphabetical characters are allowed", maxlength: 64, required: true %>
    </div>

    <div class="field">
        <%= form.email_field :email, label:"Preferred Email", pattern: "[^@]+@[^@]+", maxlength: 254, required: true %>
    </div>

    <div class="field">
        <%= form.collection_select :country_id, Country.where("id > 1").order(created_at: :desc), :id, :country_name, {include_blank: ""} %>
    </div>

    <div class="field">
        <%= form.collection_select :customerstatus_id, Customerstatus.where("id > 1").order(created_at: :desc), :id, :customerstatus, {include_blank: ""} %>
    </div>


    <div class="field">
        <%= form.collection_select :customertype_id, Customertype.where("id > 1").order(created_at: :desc), :id, :customertype, {include_blank: ""} %>
    </div>

    <% if current_user.admin? %>
    <div class="field">
        <%#= form.collection_select :user_id, User.where("id > 0").order(created_at: :desc).all, :id, :email, {include_blank: ""}, disabled: !current_user.admin? %>
        <%= form.collection_select :user_id, User.where("id > 0").order(created_at: :desc).all, :id, :email, {include_blank: ""} %>
    </div>
    <% end %>

    <div class="actions">
        <%= form.submit :Submit, class: 'btn btn-success' %>
    </div>
    <% end %>
</div>