<div class="card-body">
    <%= bootstrap_form_with(model: auction, local: true, layout: :horizontal) do |form| %>
    <% if auction.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(auction.errors.count, "error") %> prohibited this auction from being saved:</h2>

        <ul>
            <% auction.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <%= form.text_field :auctionname, label: "Auction Name", minlength: 3, maxlength: 36, size: 24, required: true %>
    </div>

    <div class="field">
        <%= form.text_field :address, pattern: "^[#'.0-9a-zA-Z\s,-]*$", minlength: 5, maxlength: 72, size: 24, required: true %>
    </div>

    <div class="field">
        <%= form.collection_select :location_id, Location.order(:city), :id, :city, {include_blank: ""},  required: true %>
    </div>

    <div class="actions">
        <%= form.submit  :Submit, class: 'btn btn-success' %>
    </div>
    <% end %>
</div>