<div class="row row-fluid">
    <div class="col-xs-12">
        <div class="card card-default">
            <div class="card-header">
                <h1>Auctions</h1>
            </div>
            <table class="table table-hover table-bordered table-responsive">
                <thead class="thead-light">
                    <tr>
                        <th>Auction Name</th>
                        <th>Address</th>
                        <th>Location</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @auctions.each do |auction| %>
                    <tr>
                        <td><%= auction.auctionname %></td>
                        <td><%= auction.address %></td>
                        <td><%= auction.location.city %></td>
                        <td><%= link_to 'Show', auction %></td>
                        <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
                        <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="card-footer">
                <%= link_to 'New Auction', new_auction_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>

<br>