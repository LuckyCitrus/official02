<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card card-default">
            <div class="card-header">
                <h1>Pictures</h1>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Picture</th>
                        <th>Order</th>
                        <th colspan="4"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @pictures.each do |picture| %>
                    <tr>
                        <td><%= link_to picture.picture, picture %></td>
                        <td><%= link_to picture.order.try(:ordernum), picture.order if picture.order %></td>
                        <!--<td><%= link_to 'Show', picture %></td>-->
                        <td><%= link_to 'Edit', edit_picture_path(picture) %> / 
                        <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="card-footer">
                <%= link_to 'New Picture', new_picture_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>

<br>