<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Container Order</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Container:</strong>
                    <%= @containerorder.container.containernum %>
                </p>
                <p>
                    <strong>Order:</strong>
                    <%= @containerorder.order.ordernum %>
                </p>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_containerorder_path(@containerorder), class: "btn btn-primary" %>
                <%= link_to 'Back', containerorders_path, class: "btn btn-secondary" %> </div>
        </div>
    </div>
</div>