<div class="row row-fluid">
    <div class="col-md-8 col-md-offset-2">
        <div class="card card-default">
            <div class="card-heading">
                <h1>Container Orders</h1>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Container</th>
                            <th>Order</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @containerorders.each do |containerorder| %>
                        <tr>
                            <td><%= containerorder.container.containernum %></td>
                            <td><%= containerorder.order.ordernum %></td>
                            <td><%= link_to 'Show', containerorder %></td>
                            <td><%= link_to 'Edit', edit_containerorder_path(containerorder) %></td>
                            <td><%= link_to 'Destroy', containerorder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <%= link_to 'New Container Order', new_containerorder_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
</div>
    <br>