<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>Company</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Company Name:</strong>
                    <%= @company.companyname %>
                </p>

            </div>
            <div class="card-footer">
                <%= link_to 'Edit', edit_company_path(@company), class: "btn btn-primary" %>
                <%= link_to 'Back', companies_path, class: "btn btn-secondary" %> </div>
        </div>
    </div>
</div>