<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card card-default">
            <div class="card-header">
                <h1>Companies</h1>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Company Name</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @companies.each do |company| %>
                    <tr>
                        <td><%= link_to company.companyname, company %></td>
                        <!--<td><%= link_to 'Show', company %></td>-->
                        <td><%= link_to 'Edit', edit_company_path(company) %>
                            <% if current_user.admin? %> /
                            <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% end %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="card-footer">
                <div class="footer-left">
                    <%= link_to 'New Company', new_company_path, class: "btn btn-primary" %>
                </div>
                <div class="footer-right">
                    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1  %>
                </div>
            </div>
        </div>
    </div>
</div>

<br>