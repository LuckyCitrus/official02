<div class="row row-fluid">
    <div class="col-md-8 col-md-offset-2">
        <div class="card card-default">
            <div class="card-header">
                <h1>Users</h1>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>User</th>
                        <th>Role</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                    <tr>
                        <%= render user %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

