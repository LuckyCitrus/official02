<h1>Users</h1>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>User</th>
            <th>Role</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <%= render user %>
        </tr>
        <% end %>
    </tbody>
</table>