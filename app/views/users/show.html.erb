<div class="row row-fluid">
    <div class="col-sm-5">
        <div class="card">
            <div class="card-header">
                <h3>User</h3>
            </div>
            <div class="card-body">
                <p>
                    <strong>Email: </strong>
                    <%= @user.email if @user.email %>
                </p>
                <p>
                    <strong>Name: </strong>
                    <%= @user.employee.try(:emp_fullname) %>
                    <%= @user.customer.try(:cus_fullname) %>
                </p>
                <p>
                    <strong>Role: </strong>
                    <%= @user.role.titleize %>
                </p>

            </div>
            <div class="card-footer">
                <%= link_to 'Back', users_path, class: "btn btn-secondary" %>
            </div>
        </div>
    </div>
</div>